<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Reply to <%= question.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/questions/<%= question._id %>/replies" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="reply[text]" placeholder="text"></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="reply[code]" placeholder="code"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/questions">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>


