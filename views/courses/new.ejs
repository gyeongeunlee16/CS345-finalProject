<% include ../partials/header %>
<div class="container">
    <div class = "d-flex justify-content-center">
        <div class="card" id="no-border">  
            <div class="card-body text-center">
                <h1 class = "card-title">Create a New Course</h1>
        
                <form action="/courses" method="POST">
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="name" placeholder="Course Name">
                    </div>
                    
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="image" placeholder="Course Image url">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="description" placeholder="Course Description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a  class="d-block text-center my-4"href="/courses">Go Back</a>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>

