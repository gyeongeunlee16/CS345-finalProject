<% include ../partials/header %> 
<div class="jumbotron jumbotron-fluid">
    
                 <h1 class="display-1 text-center"> Course List</h1>
                 <p class="text-muted text-center">View all CS courses available </p>
                 
                 <div class="text-center">
                    <a class="btn btn-primary btn-lg" href="/courses/new">Add New Course</a>
                  </div>
    
            
</div>
     
     

<div class = "row ml-4 mr-4 mb-4"> 
        <% courses.forEach(function(course){ %>
         <div class="col-4">
            <div class="card-deck">
                <div class="card text-center">
                    <img class="card-img-top" src ="https://www.northeastern.edu/graduate/blog/wp-content/uploads/2017/10/Code-on-Computer-Hero.gif" alt="course">
                    <div class="card-img-overlay">
                           <a href="/courses/<%= course._id %>" class="btn btn-light btn-block"><%= course.name %></a>
                    
                    </div>
              </div>
            </div>
        </div>
               
        <% }) %>
    </div>


<% include ../partials/footer %>