<% include ../partials/header %>
<div class="container">
    <div class = "d-flex justify-content-center">
        <div class="card" id="no-border">  
            <div class="card-body text-center">
                <h1 class="card-title">Edit topic</h1>

            <form action="/courses/<%= course_id %>/topics/<%= topic._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" name="topic[text]" value='<%= topic.text %>'>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Submit!</button>
                </div>
                <a href="/courses">Go Back</a>
            </form>
            
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>


