<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Resource to <%= topic.text %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/topics/<%= topic._id %>/resources" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="resource[title]" placeholder="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="resource[description]" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/courses">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>


