<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center align-items-center">
        <h1 style="text-center">Create a New Question</h1>
        <div style="width: 90%; margin: 25px auto;">
            <form action="/questions" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Title of your question">
                </div>
              <div class="form-horizontal">
                <div class="form-group">
                    <textarea class="form-control" rows="5" type="text" name="description" placeholder="More details " ></textarea>
                   </div>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="code" placeholder="Add Code "></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block ">Submit!</button>
                </div>
            </form>
            <a href="/questions" class="d-block text-center mt-sm-4">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>


